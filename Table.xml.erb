<% 
    require 'erb'
    require 'matrix'
    require_relative "Table"
   
   

    def degreeToRadian(degrees)
      radians = degrees * Math::PI / 180 
      return radians
    end
    def a_to_s(v)#converts array to string
      Array(v).join(" ")
    end


  
    if !defined?(leg_thickness)
      leg_thickness = 0.05
    end
    
    leg_hight = 0.5

    table_w = 0.5
    table_l = 1
    table_top_thickness = 0.05
    
    leg_size  = [leg_thickness,leg_thickness,leg_hight]

    legs_pos =[
      [-1*(table_l-leg_thickness),-1*(table_w-leg_thickness),0],
      [1 *(table_l-leg_thickness),-1*(table_w-leg_thickness),0],
      [-1*(table_l-leg_thickness), 1*(table_w-leg_thickness),0],
      [1 *(table_l-leg_thickness), 1*(table_w-leg_thickness),0]
    ]

    table_dim = [table_l,table_w,table_top_thickness]

    table = Table.new(leg_hight,leg_thickness,table_w,table_l,table_top_thickness)


    

  


    
%>

<mujoco>
  <compiler meshdir="assets/meshes" texturedir="assets/textures" autolimits="true"/>
 
  <asset>
    <%=table.assets_xml%>
  </asset>

  <default>
    <%=table.default_xml%>
  </default>


  <worldbody>
    <%=table.body_xml%>
  </worldbody>

 
</mujoco>



