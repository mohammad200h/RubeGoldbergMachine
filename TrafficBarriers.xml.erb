<% 
    require 'erb'
    require 'matrix'
    require_relative "TrafficBarriers"
   
   

    def degreeToRadian(degrees)
      radians = degrees * Math::PI / 180 
      return radians
    end
    def a_to_s(v)#converts array to string
      Array(v).join(" ")
    end

    trafficBarriers = TrafficBarriers.new([0,0,0.5,0,0,0],0.02,0.05,0.001)
  
%>

<mujoco>
  <compiler meshdir="assets/meshes" texturedir="assets/textures" autolimits="true"/>
 
  <asset>
    <%=trafficBarriers.assets_xml%>
  </asset>

  <default>
    <%=trafficBarriers.default_xml%>
  </default>


  <worldbody>
    <%=trafficBarriers.body_xml%>
  </worldbody>

 
</mujoco>



