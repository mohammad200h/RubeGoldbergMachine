<mujoco>
    <asset>
        <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" 
            rgb2=".2 .3 .4" width="100" height="100" mark="edge" markrgb=".4 .5 .6"/>
        <material name="grid" texture="grid" texrepeat="1 1" texuniform="true"
            reflectance=".2"/>
    </asset>

    <worldbody>
        <site name="topguide" pos = "0 0 1.25" />

        <body name="Pulley" pos="0 0 .75" >
            <joint type="hinge" axis="0 1 0"/>
            <geom name="Pulley" type= "cylinder" size=".25 .1" euler="90 0 0" material="grid"/>
        </body>

        <body name="slider_b" pos="1 0 -.75" >
            <joint type="slide" name="slider" axis="0 0 1"/>
            <geom type="sphere" size=".1" />
            <site name="anchor" />
        </body>

        <body name="weight" pos="-.25 0 0" >
            <joint type="free" />
            <geom type="cylinder" size=".1 .25" />
            <site name="weightsite" pos="0 0 .125" />
        </body>
    </worldbody>

    <tendon>
        <spatial name="belt" damping=".5" limited="true" range="3 3.05" >
            <site site="anchor" />
            <geom geom="Pulley" sidesite="topguide" />
            <site site="weightsite" />
        </spatial>
    </tendon>

    <actuator>
        <position name="Zpos" joint="slider" ctrlrange="-.5 .5" ctrllimited="true" kp="1000" />
        <velocity name="Zvel" joint="slider" ctrlrange="-.5 .5" ctrllimited="true" kv="100" />
    </actuator>
</mujoco>